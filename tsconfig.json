{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@cookup/core" : ["core/core.ts"],
      "@cookup/hooks":["hooks/hooks.ts"],
      "@cookup/types": ["types/types.ts"],
      "@cookup/utils": ["utils/utils.ts"],
      "@cookup/redux": ["redux/redux.ts"],
      "@cookup/assets": ["public/assets/*"],
      "@cookup/styles": ["styles/styles.ts"],
      "@cookup/screens": ["screens/screens.ts"],
      "@cookup/modules": ["modules/modules.ts"],
      "@cookup/constant": ["constant/constant.ts"],
      "@cookup/providers": ["providers/providers.ts"],
      "@cookup/components": ["components/components.ts"],
      "@cookup/services": ["services/services.ts"],
      "@cookup/firebase": ["firebase.ts"],
      "@cookup/helpers": ["helpers/helpers.ts"],
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
}
